<Window x:Class="TaschenRechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaschenRechner"
        mc:Ignorable="d"
        Title="TaschenRecnher" Height="450" Width="300"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent" ResizeMode="NoResize" WindowStyle="None" MouseLeftButtonDown="DragMe">
    <Border CornerRadius="5" BorderBrush="Gray"
            BorderThickness="0.3" Grid.RowSpan="2">
        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#7be9f6" Offset="0.0"/>
                <GradientStop Color="#f083da" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Ellipse Fill="Red" Grid.Row="0" Grid.Column="4" Height="15" Width="15"
                     HorizontalAlignment="Right" VerticalAlignment="Top" 
                     Margin="0,10,10,0" MouseLeftButtonDown="closeApp"
                     ToolTip="Close" Cursor="Hand" Tag=""/>
            <Ellipse Fill="Yellow" Grid.Row="0" Grid.Column="4" Height="15" Width="15"
                     HorizontalAlignment="Right" VerticalAlignment="Top"
                     Margin="0,10,30,0" MouseLeftButtonDown="minimizeApp"
                     ToolTip="Minimize" Cursor="Hand">
            </Ellipse>



            <TextBox x:Name="textDisplay" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" IsReadOnly="True"
                     TextAlignment="Right" VerticalAlignment="Bottom" FontSize="30"
                     BorderThickness="0" Background="Transparent"> 0
            </TextBox>


<!--Math Buttons-->
            <Button x:Name="btnProcent" Grid.Row="3" Grid.Column="0" Content="%" Background="Transparent" />
            <Button x:Name="btnClearAll" Grid.Row="3" Grid.Column="1" Content="CE" Background="Transparent" Click="btnClearAll_Click"/>
            <Button x:Name="btnClearLast" Grid.Row="3" Grid.Column="2" Content="&lt;-" Background="Transparent" Click="btnClearLast_Click"/>
            <Button x:Name="btnPower" Grid.Row="3" Grid.Column="3" Content="x^2" Background="Transparent"/>

            <!--7,8,9-->
            <Button x:Name="btn7" Grid.Row="4" Grid.Column="0" Content="7" Background="Transparent" Click="btn7_Click"/>
            <Button x:Name="btn8" Grid.Row="4" Grid.Column="1" Content="8" Background="Transparent" Click="btn8_Click" />
            <Button x:Name="btn9" Grid.Row="4" Grid.Column="2" Content="9" Background="Transparent" Click="btn9_Click"/>
            <Button x:Name="btnDivide" Grid.Row="4" Grid.Column="3" Content="/" Background="Transparent" Click="btnDivide_Click"/>

            <!--4,5,6-->
            <Button x:Name="btn4" Grid.Row="5" Grid.Column="0" Content="4" Background="Transparent" Click="btn4_Click"/>
            <Button x:Name="btn5" Grid.Row="5" Grid.Column="1" Content="5" Background="Transparent" Click="btn5_Click"/>
            <Button x:Name="btn6" Grid.Row="5" Grid.Column="2" Content="6" Background="Transparent" Click="btn6_Click"/>
            <Button x:Name="btnMal" Grid.Row="5" Grid.Column="3" Content="*" Background="Transparent" Click="btnMal_Click"/>

            <!--1,2,3-->
            <Button x:Name="btn1" Grid.Row="6" Grid.Column="0" Content="1" Background="Transparent" Click="btn1_Click"/>
            <Button x:Name="btn2" Grid.Row="6" Grid.Column="1" Content="2" Background="Transparent" Click="btn2_Click"/>
            <Button x:Name="btn3" Grid.Row="6" Grid.Column="2" Content="3" Background="Transparent" Click="btn3_Click"/>
            <Button x:Name="btnPlus" Grid.Row="6" Grid.Column="3" Content="+" Background="Transparent" Click="btnPlus_Click"/>

            <!--1,2,3-->
            <Button x:Name="btnMinus" Grid.Row="7" Grid.Column="3" Content="-" Background="Transparent" Click="btnMinus_Click"/>
            <Button x:Name="btn0" Grid.Row="7" Grid.Column="1" Content="0" Background="Transparent"/>
            <Button x:Name="btnEqual" Grid.Row="7" Grid.Column="2" Content="=" Background="Transparent" Click="btnEqual_Click"/>
            <Button x:Name="btnkomma" Grid.Row="7" Grid.Column="0" Content="," Background="Transparent"/>

        </Grid>
    </Border>

